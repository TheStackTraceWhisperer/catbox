<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- 
    Verbose logging configuration for tests.
    This configuration is used when the "verbose-logging" Spring profile is active.
    Activate it with: mvn test -Dspring.profiles.active=verbose-logging
  -->
  
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -- %msg%n</pattern>
    </encoder>
  </appender>
  
  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>
  
  <!-- Explicitly enable testcontainers logging -->
  <logger name="org.testcontainers" level="INFO"/>
  <logger name="tc" level="INFO"/>
</configuration>
