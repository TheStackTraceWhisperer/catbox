<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- 
    Default configuration: Suppress logs during tests for cleaner output.
    To enable verbose logging, activate the "verbose-logging" Spring profile:
    - Via Maven: mvn test -Dspring.profiles.active=verbose-logging
    - Via IDE: Add "verbose-logging" to active profiles
    
    The verbose-logging profile will load logback-verbose.xml instead of this file.
  -->
  
  <!-- Silence everything during tests -->
  <root level="OFF"/>
  
  <!-- Extra safety: explicitly silence noisy libraries -->
  <logger name="org.springframework" level="OFF"/>
  <logger name="org.hibernate" level="OFF"/>
  <logger name="org.testcontainers" level="OFF"/>
  <logger name="tc" level="OFF"/>
  <logger name="com.zaxxer.hikari" level="OFF"/>
  <logger name="com.microsoft.sqlserver.jdbc" level="OFF"/>
</configuration>
